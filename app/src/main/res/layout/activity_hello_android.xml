<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/link"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:autoLink="all"
    android:orientation="vertical"
    tools:context=".HelloAndroid">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@drawable/unique"
        tools:ignore="contentdescription" />


    <TextView
        android:id="@+id/bottom_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:padding="@dimen/text_padding"
        android:text="@string/UDACITY"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="map"
        android:background="@color/medium_blue"
        android:padding="@dimen/padding_text"
        android:text="@string/address"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textColorLink="@android:color/black"
        android:textSize="@dimen/text_size_"
        android:textStyle="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:background="@color/light_blue"
        android:padding="@dimen/text_padding"
        android:text="@string/_650_555_5555"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textColorLink="@android:color/black"
        android:textSize="@dimen/text_size_"
        android:textStyle="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:background="@color/light_blue"
        android:padding="8dp"
        android:text="@string/www_udacity_com"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textColorLink="@android:color/black"
        android:textSize="@dimen/text_size_"
        android:textStyle="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_purple"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_bottom"
        android:text="@string/A_unique_education_in_a_unique_world."
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_"
        android:textStyle="normal" />

</LinearLayout>

